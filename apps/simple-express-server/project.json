{
  "name": "simple-express-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/simple-express-server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {

        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/simple-express-server",
        "main": "apps/simple-express-server/src/main.ts",
        "tsConfig": "apps/simple-express-server/tsconfig.app.json",
        "assets": ["apps/simple-express-server/src/assets"],
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/simple-express-server/src/environments/environment.ts",
              "with": "apps/simple-express-server/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "deploy": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx build simple-express-server",
          "docker build -f ./apps/simple-express-server/Dockerfile -t simple-express-server:{args.tag} ."
        ],
        "parallel": false
      }
    }, 
    "deploy-cloud-run": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "imageTag": "asia-south1-docker.pkg.dev/elewa-clm-test/goomza-images-repository/goomza/simple-express-server:latest",
        "commands": [
          "nx build simple-express-server",
          "docker buildx build --platform linux/amd64 -t asia-south1-docker.pkg.dev/elewa-clm-test/goomza-images-repository/goomza/simple-express-server:latest -f ./apps/simple-express-server/Dockerfile .",
          "docker push asia-south1-docker.pkg.dev/elewa-clm-test/goomza-images-repository/goomza/simple-express-server:latest",
          "gcloud run deploy simple-express-server --image asia-south1-docker.pkg.dev/elewa-clm-test/goomza-images-repository/goomza/simple-express-server:latest --region=asia-south1 --quiet --allow-unauthenticated"
        ],
        "parallel": false
      }
    }, 
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "simple-express-server:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "simple-express-server:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/simple-express-server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/simple-express-server"],
      "options": {
        "jestConfig": "apps/simple-express-server/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
