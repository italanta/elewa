{
  "functions": {
    "source": "dist/apps/conv-lm-backend",
    "runtime": "nodejs18",
    "predeploy": [
      "nx build conv-lm-backend --skip-nx-cache --prod",
      "node tools/scripts/build-gc-functions-package.js"
    ]
  },
  "hosting": {
    "target": "convl-manager",
    "public": "dist/apps/conv-learning-manager",
    "predeploy": [
      "nx build conv-learning-manager --skip-nx-cache --prod"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5050
    },
    "ui": {
      "enabled": true
    },
    "firestore": {
      "port": 8080,
      "rules": "firestore.rules"
    },
    "storage": {
      "port": 9199,
      "rules": "storage.rules"
    },
    "singleProjectMode": true,
    "auth": {
      "port": 9099
    }
  },
  "storage": {
    "rules": "storage.rules"
  }
}
